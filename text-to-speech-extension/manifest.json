{
    "manifest_version": 3,
    "name": "Text-to-Speech Reader",
    "version": "1.0",
    "description": "Hover over text to read it aloud with text-to-speech",
    "permissions": [
        "activeTab",
        "tts",
        "storage",
        "tabs"
    ],
    "action": {
        "default_icon": {
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
